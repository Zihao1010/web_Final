<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Welcome to Amy's kitchen</title>
    <meta name="description" content="A cool thing made with Glitch">
    <link id="favicon" rel="icon" href="https://glitch.com/edit/favicon-app.ico" type="image/x-icon">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- import the webpage's stylesheet -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
    
    <div class="header">
		<div class="container">
			<div class="header-left">
				<div class="head-nav">
					<span class="menu"> </span>
						<ul>
              <li><a href = "/all">All</a></li>
              <li><a href = "/appetizer">Appetizer</a></li>
              <li><a href = "/maincourse">Main Course</a></li>
              <li><a href = "/dessert">Dessert</a></li>
              <li><a href = "/drink">Drinks</a></li>	
              <li><a href = "/customer/<%= user_info.username%>/cart">My Cart</a></li>	
              <li><a href = "/customer/<%= user_info.username%>/order">Orders History</a></li>	
              <li  class="active">
                 
              <a class="hellouser">Hello, <%= user_info.privateInfo.name %> !</a>
           
              </li>
              <li><a href = "/logout">Log Out</a></li>	
						</ul>
					</div>
				</div>
					<div class="clearfix"> </div>
			</div>
	</div>
    <br>
    <div class = "form">
      <form action="/customer/<%= user_info.username %>/edit" method="post">
        <div>
          <label for="name">Name:</label>
          <input type="text" id="name" name="name">
        </div>

        <div>
          <label for="city">City:</label>
          <input type="text" id="city" name="city">
        </div>

        <div>
          <label for="state">State:</label>
          <input type="text" id="state" name="state">
        </div>
        
        <div>
          <label for="zip">Zip:</label>
          <input type="number" id="zip" name="zip">
        </div>
        
        <div>
          <label for="phone">Phone:</label>
          <input type="text" id="phone" name="phone">
        </div>  

        <div>
          <label for="email">Email:</label>
          <input type="text" id="email" name="email">
        </div>

        <button class="btn btn-outline-success my-2 my-sm-0" type="submit" onclick="check()">Update</button>
    </form>
    
  </div>
    <script>
      function check(){
        var name = document.getElementById('name').value;
        var city = document.getElementById('city').value;
        var state = document.getElementById('state').value;
        var zip = document.getElementById('zip').value;
        var phone = document.getElementById('phone').value;
        var email = document.getElementById('email');
        //This is the email standard form
        var email_form =/^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$/;
        if(name == ""||city == ""||state == ""||zip == ""||phone == ""||email == ""){
            alert("Please input all information");
            event.preventDefault();
        }
        else if(!email_form.test(document.getElementById("email").value)){
          alert("Please input correct email address");
          event.preventDefault();
        }
        
      }
      </script>
    
    <div class="glitchButton" style="position:fixed;top:20px;right:20px;"></div>
    <script src="https://button.glitch.me/button.js"></script>
  </body>
</html>

